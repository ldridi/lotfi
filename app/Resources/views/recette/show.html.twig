                            <button class="btn btn-white btn-xs" type="button">Theme :
                                {% for theme in recette.theme %}
                                    <span class="badge badge-success"> {{ theme.nomTheme }}</span>
                                {% endfor %}
                            </button>
                            <button class="btn btn-white btn-xs" type="button">Nationalite : {{ recette.nationalite.nomNationalite }}</button>
                        </div>
                        <div class="text-center article-title">
                            <span class="text-muted"><i class="fa fa-clock-o"></i> {{  recette.dateRecette|date("m/d/Y") }}</span>
