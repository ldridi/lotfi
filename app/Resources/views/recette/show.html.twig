{% extends 'layout/layout.html.twig' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2><b>"{{ recette.nomRecette }}"</b>
                <a href="{{ path('recette_edit', {'id':recette.id}) }}">Modifier la recette</a> {% if is_granted('ROLE_ADMIN') %}OU <a href="{{ path('signalrecette_new', {'id':recette.id}) }}"> <b class="text-danger">Signaler la recette</b></a>{% endif %}
            </h2>
        </div>
